@model HaberSitesi.Web.Areas.Admin.Models.RolModel

@{
    ViewBag.Title = "Rol Düzenle";
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Rol Düzenleme</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Ad)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Ad)
            @Html.ValidationMessageFor(model => model.Ad)
        </div>

        <p>
            <input type="submit" value="Kaydet" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Listeye geri dön", "Roller")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
