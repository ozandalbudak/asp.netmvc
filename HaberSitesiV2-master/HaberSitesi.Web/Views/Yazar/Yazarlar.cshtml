@model IEnumerable<HaberSitesi.Domain.DomainModel.Kullanici>
@{
    ViewBag.Title = "Yazarlar";
}

<div id="tum_yazarlar" class="tutucu">
    @foreach (var item in Model)
    {
        var haber = item.YazilanHaberler.LastOrDefault();
        <a href="@Url.Action("KoseYazisiDetay", "KoseYazisi", new { id = item.Id, seoBaslik = haber.SeoBaslik, kategori = haber.Kategori.SeoAd })" class="resim_link">
            <div class="yazar">
                <img src="~/@item.KucukProfilResim" alt="@item.KullaniciAdi" />
                <div class="yazar_info">
                    <div class="ad">
                        <h2>@item.KullaniciAdi</h2>
                    </div>
                    <div class="yazi">
                        <h2>@item.YazilanHaberler.LastOrDefault().Baslik</h2>
                    </div>
                </div>
            </div>
        </a>
    }
</div>
